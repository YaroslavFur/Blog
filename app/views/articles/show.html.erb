<h1><%= @article.title %></h1>

<p class="alert alert-light">
<%= @article.body %>
</p>

<div class="btn-toolbar" role="toolbar">
  <div class="btn-group mr-2" role="group">
    <%= button_to "Back", articles_path, :method => :get, :class => "btn btn-secondary" %>
  </div>
  <div class="btn-group" role="group">
    <%= button_to "Edit", edit_article_path(@article), :method => :get, :class => "btn btn-warning" %>
    <%= button_to "Delete", article_path(@article), :method => :delete, :data => { confirm: "Are you sure?" }, :class => "btn btn-danger" %>
  </div>
</div>
<br> <br> <br>

<div class="alert alert-secondary" style="padding-right: 50%">
  <h5>Add a comment:</h5>
  <%= render 'comments/form' %>
</div>

<% if @article.comments.all.count > 0%>
<br><h2>Comments</h2><br>
<%= render @article.comments%>
<% end %>